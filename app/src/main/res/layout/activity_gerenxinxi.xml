<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_gerenxinxi"
   android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RelativeLayout
                android:id="@+id/rl_gerenxinxi_fanhui"
                android:layout_width="40dp"
                android:layout_height="64dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/a_btn_join" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的信息"
                android:textColor="#323232"
                android:layout_centerInParent="true"
                android:textSize="16sp" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#f0f0f0"></View>
   

    <LinearLayout
        android:id="@+id/ll_gerenxinxi_touxiang"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="用户头像"
            android:textColor="#323232"
            android:textSize="15sp"/>

        <com.bjxiyang.shuzianfangwuyeban.view.CircleImageView
            android:id="@+id/iv_touxiang"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/a_icon_wode" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/a_btn_jinru" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
       
        android:background="#f0f0f0"></View>

    <LinearLayout
        android:id="@+id/ll_nickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="昵称"
            android:textColor="#323232"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_gerenxinxi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好人" 
            />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/a_btn_jinru" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"       
        android:background="#f0f0f0"></View>

    <LinearLayout
        android:id="@+id/ll_gerenxinxi_tel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电话"
            android:textColor="#323232"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_gerenxinxi_dinahua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18888888888" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/a_btn_jinru" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="#f0f0f0"></View>

    <LinearLayout
        android:id="@+id/ll_gerenxinxi_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="性别"
            android:textColor="#323232"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_gerenxinxi_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"/>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/a_btn_jinru" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
       
        android:background="#f0f0f0"></View>

    <LinearLayout
        android:id="@+id/ll_gerenxinxi_sehngri"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="生日"
            android:textColor="#323232"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_gerenxinxi_shengri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000-2-2" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/a_btn_jinru" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="#f0f0f0"></View>


</LinearLayout>
