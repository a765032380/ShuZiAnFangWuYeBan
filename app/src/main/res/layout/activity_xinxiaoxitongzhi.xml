<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RelativeLayout
                android:id="@+id/rl_news_fanhui"
                android:layout_width="40dp"
                android:layout_height="64dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/a_btn_join" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新消息通知"
                android:textColor="#323232"
                android:layout_centerInParent="true"
                android:textSize="16sp" />
        </RelativeLayout>

    </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="#f0f0f0">
   

    <LinearLayout
        android:id="@+id/ll_news_xiugai"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="新消息通知"
            android:textColor="#323232"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已开启"
            android:textColor="#323232"
            android:textSize="15sp"/>

 

    </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:gravity="center_vertical"
          android:paddingRight="15dp"
          android:paddingLeft="15dp"
          android:textColor="#909090"
          android:textSize="12sp"
          android:text="更改通知样式，请在设备的“设置”-“通知中心”功能中，找到应用程序“数字安防”进行修改。"/>
    <LinearLayout
        android:id="@+id/ll_news_tishiyin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="消息提示音"
            android:textColor="#323232"
            android:textSize="15sp"/>



        <com.bjxiyang.shuzianfangwuyeban.view.SwitchButton
            android:id="@+id/sw_tishiyin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:paddingRight="15dp"
          android:paddingLeft="15dp"
          android:textColor="#909090"
          android:textSize="12sp"
          android:layout_marginTop="10dp"
          android:text="若关闭，如有新消息将不再有提示音。" />


  </LinearLayout>

</LinearLayout>
