<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:id="@+id/iv_chuangjianjiaofei_fanhui"
            android:layout_width="40dp"
            android:layout_height="44dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/a_btn_join" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="3dp"
            android:text="创建缴费"
            android:textColor="#323232"
            android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/rl_lishijiaofei"
            android:layout_width="80dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">


        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_danweimianji"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_danweimianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位面积"
                android:textColor="#323232"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_danweimianji"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="#000000"></View>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_louhao1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_louhao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="楼号"
                android:textColor="#909090"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_louhao1"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="#000000"></View>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1"></View>

    <ScrollView
        android:visibility="gone"
        android:id="@+id/sc_danweimianji"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:text="小区"
                android:textColor="#646464"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_xiaoqu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/conners_5dp_f1f1f1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tv_xiaoqu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="请选择"
                    android:textColor="#323232" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/a_btn_jinru" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:text="设置金额（元/㎡）"
                android:textColor="#646464"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:text="设置单位面积金额，系统会为您自动核算物业费"
                android:textColor="#646464"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_shezhijine"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/conners_5dp_f1f1f1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/et_shezhijine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:cursorVisible="true"
                    android:gravity="center_vertical"
                    android:hint="请输入金额"
                    android:singleLine="true"
                    android:textColor="#323232"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:text="设置缴费截止时间"
                android:textColor="#646464"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_jiezhishijiann"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/conners_5dp_f1f1f1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tv_jiezhishijiann"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="请选择" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/a_btn_jinru" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:text="备注"
                android:textColor="#646464"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_beizhu"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/conners_5dp_f1f1f1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/et_beizhu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:cursorVisible="true"
                    android:gravity="top"
                    android:hint="请输入备注"
                    android:paddingTop="5dp"
                    android:textColor="#d2d2d2"
                    android:textSize="16sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_tijiao"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/b_c_btn_lan"
                android:gravity="center"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="17sp" />

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/sc_louhao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="小区"
                android:textColor="#646464"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_louhao_xiaoqu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/conners_5dp_f1f1f1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tv_louhao_xiaoqu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="请选择"
                    android:textColor="#323232" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/a_btn_jinru" />
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="期数"
                    android:textColor="#646464"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/ll_louhao_qiqu"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/conners_5dp_f1f1f1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_louhao_qiqu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="请选择"
                        android:textColor="#323232" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/a_btn_jinru" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="楼号"
                        android:textColor="#646464"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/ll_louhao_louhao"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/conners_5dp_f1f1f1"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/tv_louhao_louhao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="请选择"
                            android:textColor="#323232" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/a_btn_jinru" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="单元"
                        android:textColor="#646464"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/ll_danyuan"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/conners_5dp_f1f1f1"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/tv_louhao_danyuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="请选择"
                            android:textColor="#323232" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/a_btn_jinru" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="房号"
                        android:textColor="#646464"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/ll_louhao_fanghao"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/conners_5dp_f1f1f1"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/tv_louhao_fanghao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="请选择"
                            android:textColor="#323232" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/a_btn_jinru" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="设置时间"
                        android:textColor="#646464"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/ll_louhao_time"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/conners_5dp_f1f1f1"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/tv_louhao_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="请选择"
                            android:textColor="#323232" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/a_btn_jinru" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="输入金额（元）"
                        android:textColor="#646464"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/ll_louhao_money"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/conners_5dp_f1f1f1"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <EditText
                            android:id="@+id/ed_louhao_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:cursorVisible="true"
                            android:hint="请输入金额"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColor="#323232" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="设置缴费截止时间"
                        android:textColor="#646464"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/ll_louhao_endtime"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/conners_5dp_f1f1f1"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/tv_louhao_endtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="请选择"
                            android:textColor="#323232" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/a_btn_jinru" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:text="备注"
                android:textColor="#646464"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_louhao_beizhu"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/conners_5dp_f1f1f1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/et_louhao_beizhu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:cursorVisible="true"
                    android:gravity="top"
                    android:hint="请输入备注"
                    android:paddingTop="5dp"
                    android:textColor="#d2d2d2"
                    android:textSize="16sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_louhao_tijiao"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/b_c_btn_lan"
                android:gravity="center"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="17sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
