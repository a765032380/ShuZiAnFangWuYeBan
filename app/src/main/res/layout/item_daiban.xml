<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_wuyefankui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f1f1f1"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="9月"
            android:textColor="#323232"
            android:textSize="15sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/b_d_icon_quan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="物业费"
                android:textColor="#323232" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2017.09.13  09:59"
                android:textColor="#323232" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_neirong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:text="小区一到收费的时候可积极了,办事儿从来没有见过这么勤快过,看看这设施,都坏了,去找他们也不管,我就想问问,这是什么..."
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/a_icon_wode" />

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/a_icon_wode" />

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/a_icon_wode" />

            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/a_icon_wode" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="15dp"

            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="孙福生"
                    android:textColor="#323232"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="华彩国际 1期 3栋 三单元"
                    android:textColor="#323232"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_button"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:background="@drawable/b_d_btn_dadianhua"
                    android:gravity="center"
                    android:text="打电话"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/tv_button_know"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/a_b_a_btn_fasong"
                    android:gravity="center"
                    android:text="知道了"
                    android:textColor="#2064ff" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

